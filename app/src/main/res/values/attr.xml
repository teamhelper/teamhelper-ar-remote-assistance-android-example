<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PickerView">
        <attr name="preferredMaxOffsetItemCount" />
        <attr name="itemHeight" />
        <attr name="textSize" />
        <attr name="textColor" />
        <attr name="isCyclic" />
        <attr name="autoFitSize" />
        <attr name="curved" />
    </declare-styleable>

    <declare-styleable name="PickerViewGroup">
        <attr name="preferredMaxOffsetItemCount" />
        <attr name="itemHeight" />
        <attr name="textSize" />
        <attr name="textColor" />
        <attr name="autoFitSize" />
        <attr name="curved" />
    </declare-styleable>

    <attr name="preferredMaxOffsetItemCount" format="integer" />
    <attr name="itemHeight" format="dimension" />
    <attr name="textSize" format="dimension" />
    <attr name="textColor" format="color" />
    <attr name="isCyclic" format="boolean" />
    <attr name="autoFitSize" format="boolean" />
    <attr name="curved" format="boolean" />

    <declare-styleable name="DateTimePickerView">
        <attr name="type" format="enum">
            <enum name="dateTime" value="0" />
            <enum name="dateHourMinute" value="1" />
            <enum name="yearMonthDayHourMinute" value="2" />
            <enum name="yearMonthDay" value="3" />
        </attr>
        <attr name="minutesInterval" format="enum">
            <enum name="one" value="1" />
            <enum name="five" value="5" />
            <enum name="ten" value="10" />
            <enum name="fifteen" value="15" />
            <enum name="twenty" value="20" />
            <enum name="thirty" value="30" />
        </attr>
    </declare-styleable>
    <declare-styleable name="RoundFrameLayout">
        <attr name="radius" format="dimension" />
        <attr name="topLeftRadius" format="dimension" />
        <attr name="topRightRadius" format="dimension" />
        <attr name="bottomLeftRadius" format="dimension" />
        <attr name="bottomRightRadius" format="dimension" />
    </declare-styleable>
</resources>
